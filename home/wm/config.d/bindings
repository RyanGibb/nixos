bindsym @locked@ Shift+XF86MonBrightnessDown   $backlight_dec_1
bindsym @locked@ Control+XF86MonBrightnessUp   $backlight_inc_5
bindsym @locked@ Control+XF86MonBrightnessDown $backlight_dec_5

